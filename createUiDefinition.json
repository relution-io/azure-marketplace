{
  "handler": "Microsoft.Compute.MultiVm",
  "version": "0.0.1-preview",
  "parameters": {
    "basics": [{
      "name": "serverUsername",
      "type": "Microsoft.Compute.UserNameTextBox",
      "label": "User name",
      "toolTip": "Admin username for the virtual machines.",
      "constraints": {
        "required": true
      },
      "osPlatform": "Linux",
      "visible": true
    }, {
      "name": "serverPassword",
      "type": "Microsoft.Compute.CredentialsCombo",
      "label": {
        "authenticationType": "Authentication Type",
        "password": "Password",
        "confirmPassword": "Confirm password",
        "sshPublicKey": "SSH public key"
      },
      "toolTip": {
        "authenticationType": "",
        "password": "Admin password for the virtual machines.",
        "sshPublicKey": "SSH public key"
      },
      "constraints": {
        "required": true
      },
      "options": {
        "hideConfirmation": false,
        "hidePassword": false
      },
      "osPlatform": "Linux",
      "visible": true
    }, {
      "name": "adminUsername",
      "type": "Microsoft.Common.TextBox",
      "label": "Admin user name",
      "defaultValue": "admin",
      "toolTip": "Admin username for the Relution Account.",
      "constraints": {
        "required": true,
        "regex": "^[a-z0-9A-Z]{1,30}$",
        "validationMessage": "Only alphanumeric characters are allowed, and the value must be 1-30 characters long."
      },
      "visible": true
    }, {
      "name": "adminPassword",
      "type": "Microsoft.Common.PasswordBox",
      "label": {
        "password": "Admin password",
        "confirmPassword": "Confirm password"
      },
      "toolTip": "Admin password for the Relution Account.",
      "constraints": {
        "required": true,
        "regex": "^[a-z0-9A-Z]{8,30}$",
        "validationMessage": "Only alphanumeric characters are allowed, and the value must be 8-30 characters long."
      },
      "options": {
        "hideConfirmation": false
      },
      "visible": true
    }, {
      "name": "adminGivenname",
      "type": "Microsoft.Common.TextBox",
      "label": "Admin first name",
      "defaultValue": "",
      "toolTip": "Given name",
      "constraints": {
        "required": true
      },
      "visible": true
    }, {
      "name": "adminSurname",
      "type": "Microsoft.Common.TextBox",
      "label": "Admin last name",
      "defaultValue": "",
      "toolTip": "Last name",
      "constraints": {
        "required": true
      },
      "visible": true
    }, {
      "name": "adminEmail",
      "type": "Microsoft.Common.TextBox",
      "label": "Relution Admin E-Mail",
      "defaultValue": "",
      "toolTip": "E-Mail",
      "constraints": {
        "required": true
      },
      "visible": true
    }],
    "outputs": {
      "serverUsername": "[basics('serverUsername')]",
      "serverPassword": "[basics('serverPassword').password]",
      "adminUsername": "[basics('adminUsername')]",
      "adminPassword": "[basics('adminPassword').password]",
      "adminGivenname": "[basics('adminGivenname')]",
      "adminSurname": "[basics('adminSurname')]",
      "adminEmail": "[basics('adminEmail')]",
      "location": "[location()]"
    }
  }
}