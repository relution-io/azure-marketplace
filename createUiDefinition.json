{
  "handler": "Microsoft.Compute.MultiVm",
  "version": "0.0.1-preview",
  "parameters": {
    "basics": [{
      "name": "serverUsername",
      "type": "Microsoft.Compute.UserNameTextBox",
      "label": "User name",
      "toolTip": "Admin username for the virtual machines.",
      "constraints": {
        "required": true
      },
      "osPlatform": "Linux"
    }, {
      "name": "serverPassword",
      "type": "Microsoft.Compute.CredentialsCombo",
      "label": {
        "password": "Password",
        "confirmPassword": "Confirm password"
      },
      "toolTip": {
        "password": "Admin password for the virtual machines."
      },
      "constraints": {
        "required": true
      },
      "options": {
        "hideConfirmation": false
      },
      "osPlatform": "Linux"
    }, {
      "name": "adminUsername",
      "type": "Microsoft.Common.TextBox",
      "label": "Admin user name",
      "defaultValue": "",
      "toolTip": "Admin username for the Relution Account.",
      "constraints": {
        "required": true
      }
    }, {
      "name": "adminPassword",
      "type": "Microsoft.Compute.CredentialsCombo",
      "label": {
        "password": "Admin password",
        "confirmPassword": "Confirm password"
      },
      "toolTip": {
        "password": "Admin password for the Relution Account."
      },
      "constraints": {
        "required": true
      },
      "options": {
        "hideConfirmation": false
      },
      "osPlatform": "Linux"
    }, {
      "name": "adminGivenname",
      "type": "Microsoft.Common.TextBox",
      "label": "Admin first name",
      "defaultValue": "",
      "toolTip": "Given name",
      "constraints": {
        "required": true
      }
    }, {
      "name": "adminSurname",
      "type": "Microsoft.Common.TextBox",
      "label": "Admin last name",
      "defaultValue": "",
      "toolTip": "Last name",
      "constraints": {
        "required": true
      }
    }, {
      "name": "adminEmail",
      "type": "Microsoft.Common.TextBox",
      "label": "Relution Admin E-Mail",
      "defaultValue": "",
      "toolTip": "E-Mail",
      "constraints": {
        "required": true
      }
    }],
    "outputs": {
      "serverUsername": "[basics('adminUsername')]",
      "serverPassword": "[basics('adminPassword')]",
      "adminUsername": "[basics('adminUsername')]",
      "adminGivenname": "[basics('adminGivenname')]",
      "adminSurname": "[basics('adminSurname')]",
      "adminEmail": "[basics('adminEmail')]",
      "adminPassword": "[location()]"
    }
  }
}